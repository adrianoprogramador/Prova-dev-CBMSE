<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <h1><%= TipoContato.model_name.human(count: @tipo_contatos.count) %></h1>
  </div><div class="col">
    <%= link_to 'Novo', new_tipo_contato_path, class:"btn btn-primary", style: "float:right" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>#ID</th>
      <th><%= @tipo_contatos.human_attribute_name(:nome) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_contatos.each do |tipo_contato| %>
      <tr>
        <td><%= tipo_contato.id %></td>
        <td><%= tipo_contato.nome %></td>
        <td><%= link_to t('links.show'), tipo_contato %></td>
        <td><%= link_to t('links.edit'), edit_tipo_contato_path(tipo_contato) %></td>
        <td><%= link_to t('links.delete'), tipo_contato, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>